{
  "name": "lavy",
  "version": "1.0.0-Alpha.5",
  "description": "Leave it to me to handle code formatting and syntax checking, so you can concentrate on writing your program.",
  "main": "./index.js",
  "files": [
    "template",
    "typescript",
    "rules",
    "cli.js",
    "index.js",
    "react.js",
    "vue.js",
    "style.js",
    "utils"
  ],
  "keywords": [
    "eslint",
    "tslint",
    "prettier",
    "editorconfig",
    "stylelint",
    "format"
  ],
  "scripts": {
    "lint": "eslint ./",
    "test": "mocha ./test/*.test.js --timeout 5000",
    "print-config": "eslint --print-config ./index.js > ./print-config.json",
    "prepublishOnly": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GavinBirkhoff/lavy.git"
  },
  "author": {
    "name": "GavinBirkhoff",
    "email": "gavinbirkhoff@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GavinBirkhoff/lavy/issues"
  },
  "bin": {
    "lavy": "./cli.js"
  },
  "homepage": "https://github.com/GavinBirkhoff/lavy#readme",
  "engines": {
    "node": ">=16"
  },
  "peerDependencies": {
    "eslint": "7.x",
    "stylelint": "14.x"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^10.0.0",
    "eslint": "^7.0.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.5",
    "prettier": "^2.8.7",
    "stylelint": "^14.16.1",
    "typescript": "^5.0.3"
  }
}